<div class="flex justify-center items-center h-screen container">
  <div style="width: 568px;" class="shadow shadow-white/50 bg-gray-600/20 flex my-20 px-10 py-10 rounded-xl  mx-auto">
    <div class="px-8 py-6 w-full bg-secondary">
      <h2 class="text-2xl font-semibold mb-5 loginTitle">Iniciar sesión</h2>

      <form action="/api/login" method="post" id="loginForm" class="space-y-4 mx-auto formLogin">
        <div>
          <label for="email" class="block">Correo electrónico:</label>
          <input type="email" id="email" name="email"
            class="w-full px-4 py-2 border rounded-md focus:outline-none text-black focus:border-blue-500" required>
        </div>

        <div>
          <label for="password" class="block">Contraseña:</label>
          <input type="password" id="password" name="password"
            class="w-full px-4 py-2 border rounded-md focus:outline-none text-black focus:border-blue-500" required>
        </div>
        <div>
          <button type="submit"
            class="btn btn-success loginButton">
            Iniciar sesión
          </button>
      </form>
      <div class="flex gap-2 mt-2 text-sm justify-end">
        <p>¿Aún no tenés cuenta?</p>
        <a class="border-b hover:border-blue-600 hover:text-blue-600 duration-600 text-white" href="/api/register">Registrate</a>
      </div>
    </div>
  </div>
</div>
</div>